<configuration name='indelCallingBrawl2Analysis' description='Indel Calling for NGS data using platypus.'
               brawlWorkflow="IndelCalling" othersettings="..."
               brawlBaseWorkflow="WorkflowUsingMergedBams">
    <configurationvalues>
        <cvalue name='PLATYPUS_PARAMS' value="''" type="string"/>
        <!-- .. -->
    </configurationvalues>
    <processingTools>
        <tool name="indelCalling" value="indelCalling.sh" basepath="indelCallingWorkflow">
            <resourcesets />
            <input type="file" typeof="de.dkfz.b080.co.files.BamFile" scriptparameter="FILENAME_TUMOR_BAM"/>
            <input type="file" typeof="de.dkfz.b080.co.files.BamFile" scriptparameter="FILENAME_CONTROL_BAM"/>
            <output type="tuple">
                <output type="file" typeof="RawVCFFile" scriptparameter="FILENAME_VCF_RAW"/>
                <output type="file" typeof="CheckpointFileForIndel" scriptparameter="FILENAME_VCF_RAW"/>
            </output>
        </tool>
        <!-- .. -->
    </processingTools>
    <filenames filestagesbase='de.dkfz.b080.co.files.COFileStage'>
        <filename class='RawVCFFile' onTool="indelCalling" pattern="${outputAnalysisBaseDirectory}/${mpileupPlatypusOutputDirectory}/indel_${pid}.vcf.raw.gz"/>
        <filename class='CheckpointFileForIndel' onTool="indelCalling" pattern='${outputAnalysisBaseDirectory}/${mpileupPlatypusOutputDirectory}/indelCallingCheckPoint_${jobParameter,name="TOOL_ID"}'/>
        <!-- .. -->
    </filenames>
</configuration>
